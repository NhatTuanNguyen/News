<div class="card card-info" style="width:48%">
  <div class="card-header">
    <h3 class="card-title">Please sign in</h3>
  </div>
  <!-- /.card-header -->
  <!-- form start -->
  <form class="form-horizontal" method="post" action="/auth/login">

    <div class="card-body">
      <% include ./../../../admin/elements/error %>
      <%- locals.flash %>
        <div class="form-group row">
          <label for="inputEmail3" class="col-sm-2 col-form-label">User Name</label>
          <div class="col-sm-10">
            <input type="text" value="<%= item.username %>" name="username" class="form-control" id="inputEmail3" placeholder="User Name">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
          <div class="col-sm-10">
            <input type="password" class="form-control" id="inputPassword3" placeholder="Password">
          </div>
        </div>
        <div class="form-group row">
          <div class="offset-sm-2 col-sm-10">
            <div class="form-check">
              <input type="checkbox" class="form-check-input" id="exampleCheck2">
              <label class="form-check-label" for="exampleCheck2">Remember me</label>
            </div>
          </div>
        </div>
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
      <button type="submit" class="btn btn-info">Login</button>
      <a href="/sign-up" type="button" class="btn btn-info" style="color:white">Sign up</a>
      <a href="/" type="button" class="btn btn-default float-right">Cancel</a>
      <input type="hidden" name="password">
    </div>
    <!-- /.card-footer -->
  </form>
</div>