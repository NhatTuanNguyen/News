<% 

selecBoxHelper = (name,items,optionSelected="",addClass='',collection='',id='') => {
    const linkPrefix = systemConfig.prefixAdmin + `/${collection}/`;
    xhtml = "";

    items.forEach((item) => {
        let selected = (item.id == optionSelected) ? 'selected="selected"' : '';
        let id = (item.id == undefined) ? 'novalue':item.id;
        xhtml += `<option value="${id}" ${selected}>${item.name}</option>`
    });
    
    if(collection == ''){
        return `<select name="${name}" class="form-control">${xhtml}</select>`;
    }
    return `<select data-link="${linkPrefix}" data-id="${id}" name="${name}" class="form-control ${addClass}">${xhtml}</select>`;
}
%>
